[user]
	name = Knut Enners
	email = knutenners+git@gmail.com
[core]
	editor = vi
	excludesfile = /home/knut/.dotfiles/gitignore_global
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool "vimdiff"]
	cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'	
[push]
	default = simple
