"general
let mapleader = "\<Space>"
set clipboard+=unnamedplus
set number
set relativenumber
set ideajoin

" search
set hlsearch
set incsearch
set showmatch
set ignorecase
set smartcase

:nnoremap <leader><leader> <C-^>
:nnoremap <silent> <Esc> :nohlsearch<CR>

"activate build-in plugins
Plug 'tpope/vim-surround'

"actions
:map <leader>p <Action>(SimplePaste)
:map <leader>P <Action>(PasteMultiple)
:map <leader>w <Action>(SaveAll)
:map <leader>d <Action>(Debug)
:map <leader>b <Action>(ToggleLineBreakpoint)
:map <leader>tt <Action>(Run)
:map <leader>tf <Action>(Rerun-Failed-Tests)

:map <leader>ro <Action>(OptimizeImports)
:map grn <Action>(RenameElement)
:map <leader>ll <Action>(Javascript.Linters.EsLint.Fix)
